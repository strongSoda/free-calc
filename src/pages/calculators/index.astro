---
import Layout from "../../layouts/Layout.astro";
import GpaLayout from "../../components/GpaLayout";
import {
  Anvil,
  ArrowDown01,
  ArrowLeftRightIcon,
  Atom,
  Baby,
  BarChart,
  BarChart2,
  CalculatorIcon,
  ChartSpline,
  Check,
  CoinsIcon,
  Cone,
  Dice6,
  Divide,
  DollarSign,
  Heart,
  Mailbox,
  MapPinHouse,
  Network,
  PersonStanding,
  Power,
  Table,
  VenetianMask,
} from "lucide-react";

const calculators = [
  {
    title: "GPA to Percentage Calculator",
    description: "Convert your GPA to percentage across different scales",
    url: "/calculators/gpa-to-percentage",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Percentage to GPA Calculator",
    description: "Convert your percentage to GPA for various scales",
    url: "/calculators/percentage-to-gpa",
    gradient: "from-accent-secondary to-accent-success",
  },
  {
    title: "RREF Calculator",
    description: "Calculate Row Reduced Echelon Form (RREF) of matrices",
    url: "/",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Volume Calculator",
    description:
      "Calculate Volume of Any ShapeCalculate volumes of cubes, cylinders, spheres, and more",
    url: "/calculators/volume",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Subnet Calculator",
    description:
      "Calculate network addresses, ranges, and subnets for both IPv4 and IPv6 networks",
    url: "/calculators/subnet",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "BMI Calculator",
    description:
      "Calculate Body Mass Index (BMI) to check if your weight is healthy. Supports metric and imperial units.",
    url: "/calculators/bmi",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Tip Calculator",
    description:
      "Free tip calculator to instantly determine gratuity amounts and split bills between multiple people.",
    url: "/calculators/tip-calculator",
    gradient: "from-accent-primary/90 to-accent-secondary/90",
  },
  {
    title: "Love Calculator",
    description:
      "Calculate love compatibility and see your love match percentage.",
    url: "/calculators/love-calculator",
    gradient: "from-accent-primary/90 to-accent-secondary/90",
  },
  {
    title: "Standard Deviation Calculator",
    description: "Calculate standard deviation, variance, mean, and z-scores.",
    url: "/calculators/standard-deviation",
    gradient: "from-accent-primary/90 to-accent-secondary/90",
  },
  {
    title: "Pregnancy Due Date Calculator",
    description:
      "Calculate pregnancy due date, weekly milestones, and track your journey based on last period, conception, IVF, or ultrasound dates.",
    url: "/calculators/pregnancy",
    gradient: "from-rose-500/90 to-purple-500/90",
  },
  {
    title: "Period Calculator",
    description:
      "Calculate your next period, ovulation dates, and fertile windows. Plan ahead with accurate cycle predictions.",
    url: "/calculators/period",
    gradient: "from-rose-500/90 to-purple-500/90",
  },
  {
    title: "Dice Roller",
    description:
      "Free online dice roller with multiple dice options. Roll single die, two dice, or multiple dice with our easy-to-use calculator.",
    url: "/calculators/period",
    gradient: "from-accent-primary/90 to-accent-secondary/90",
  },
  {
    title: "Number to Roman",
    description:
      "Convert numbers to Roman numerals and Roman numerals to numbers.",
    url: "/calculators/roman-numerals",
    gradient: "from-accent-primary/90 to-accent-secondary/90",
  },
  {
    title: "Fractions Calculator",
    description: "Convert Between Decimals and Fractions.",
    url: "/calculators/fractions",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Quadratic Equation Calculator",
    description:
      "Solve quadratic equations, find roots, vertex, and discriminant.",
    url: "/calculators/quadratic-equation",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Body Fat Calculator",
    description:
      "Calculate your body fat percentage based on measurements like neck, waist, and hip circumference.",
    url: "/calculators/body-fat",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Half-Life Calculator",
    description:
      "Calculate half-life, decay constants, and mean lifetime for radioactive materials.",
    url: "/calculators/half-life",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Power Converter",
    description:
      "Convert between watts (W), kilowatts (kW), horsepower (hp), BTU/h, and other power units.",
    url: "/calculators/power",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Zip Code Lookup",
    description:
      "Free global postal code lookup tool with support for US ZIP codes, Canadian postal codes, Taiwan postal codes and Philippine ZIP codes.",
    url: "/calculators/zip-lookup",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "IP Address Lookup",
    description:
      "Get info on IP address including location, ISP, timezone, and more.",
    url: "/calculators/ip-lookup",
    gradient: "from-accent-primary to-accent-secondary",
  },
];

const title = "Academic Calculators";
const description =
  "Free online calculators for mathematics, grade conversions, and academic computations. Tools for students, teachers, and researchers.";
const keywords =
  "academic calculator, math calculator, gpa calculator, percentage calculator, rref calculator, volume calculator, grade conversion, matrix calculator, educational tools, scientific calculator";
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
>
  <GpaLayout
    client:load
    title={title}
    description={description}
    keywords={keywords}
  >
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        calculators.map((calc, index) => (
          <a
            href={calc.url}
            class="group block p-8 bg-surface-light dark:bg-surface-dark rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200/10 dark:border-gray-800/10 hover:border-accent-primary/20 dark:hover:border-accent-primary/20"
          >
            <div class="text-4xl mb-6 bg-surface-light-hover dark:bg-surface-dark p-4 rounded-lg w-16 h-16 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              {index === 0 && (
                <ArrowLeftRightIcon
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 1 && (
                <CalculatorIcon
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 2 && (
                <BarChart2
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 3 && (
                <Cone client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 4 && (
                <Network client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 5 && (
                <PersonStanding
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 6 && (
                <DollarSign
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}

              {index === 7 && (
                <Heart client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 8 && (
                <Table client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 9 && (
                <Baby client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 10 && (
                <VenetianMask
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 11 && (
                <Dice6 client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 12 && (
                <ArrowDown01
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 13 && (
                <Divide client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 14 && (
                <ChartSpline
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 15 && (
                <Anvil client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 16 && (
                <Atom client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 17 && (
                <Power client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 18 && (
                <Mailbox client:load className="w-8 h-8 text-accent-primary" />
              )}
              {index === 19 && (
                <MapPinHouse client:load className="w-8 h-8 text-accent-primary" />
              )}
            </div>
            <h2
              class={`font-display text-xl font-bold mb-3 bg-gradient-to-r ${calc.gradient} bg-clip-text text-transparent`}
            >
              {calc.title}
            </h2>
            <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
              {calc.description}
            </p>
            <div class="mt-4 inline-flex items-center text-accent-primary dark:text-accent-primary font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              Try Calculator â†’
            </div>
          </a>
        ))
      }
    </div>

    <div
      class="mt-12 bg-surface-light dark:bg-surface-dark-hover rounded-xl p-8 border border-gray-200/10 dark:border-gray-800/10"
    >
      <h2
        class="font-display text-2xl font-bold mb-4 bg-gradient-to-r from-accent-primary to-accent-secondary bg-clip-text text-transparent"
      >
        Why Use Our Calculators?
      </h2>
      <ul
        class="space-y-4 text-content-light-dimmed dark:text-content-dark-dimmed"
      >
        {
          [
            "Comprehensive suite of academic and mathematical calculators in one place",
            "Step-by-step solutions to help understand the process",
            "Support for international grade systems and conversion standards",
            "Advanced mathematical operations including matrices, volumes, and more",
            "Clean, intuitive interface designed for students and educators",
            "100% free with no registration or downloads required",
            "Regular updates with new calculators and features",
          ].map((feature) => (
            <li class="flex items-start">
              <Check
                client:load
                className="w-5 h-5 text-accent-success mr-2 mt-0.5 flex-shrink-0"
              />
              {feature}
            </li>
          ))
        }
      </ul>
    </div>
  </GpaLayout>
</Layout>
