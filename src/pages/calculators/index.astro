---
import Layout from "../../layouts/Layout.astro";
import GpaLayout from "../../components/GpaLayout";
import { ArrowLeftRightIcon, BarChart2, CalculatorIcon, Check } from "lucide-react";

const calculators = [
  {
    title: "GPA to Percentage Calculator",
    description: "Convert your GPA to percentage across different scales",
    url: "/calculators/gpa-to-percentage",
    gradient: "from-accent-primary to-accent-secondary",
  },
  {
    title: "Percentage to GPA Calculator",
    description: "Convert your percentage to GPA for various scales",
    url: "/calculators/percentage-to-gpa",
    gradient: "from-accent-secondary to-accent-success",
  },
  {
    title: "RREF Calculator",
    description: "Calculate Row Reduced Echelon Form (RREF) of matrices",
    url: "/",
    gradient: "from-accent-primary to-accent-secondary",
  }
];
---

<Layout>
  <GpaLayout
    client:load
    title="Academic Calculators"
    description="Free online calculators for all your academic conversion needs"
    keywords="gpa calculator, percentage calculator, rref calculator, row reduced echelon form calculator, academic calculator, grade conversion"
  >
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        calculators.map((calc, index) => (
          <a
            href={calc.url}
            class="group block p-8 bg-surface-light dark:bg-surface-dark-hover rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200/10 dark:border-gray-800/10 hover:border-accent-primary/20 dark:hover:border-accent-primary/20"
          >
            <div class="text-4xl mb-6 bg-surface-light-hover dark:bg-surface-dark p-4 rounded-lg w-16 h-16 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              {index === 0 && (
                <ArrowLeftRightIcon
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 1 && (
                <CalculatorIcon
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
              {index === 2 && (
                <BarChart2
                  client:load
                  className="w-8 h-8 text-accent-primary"
                />
              )}
            </div>
            <h2
              class={`font-display text-xl font-bold mb-3 bg-gradient-to-r ${calc.gradient} bg-clip-text text-transparent`}
            >
              {calc.title}
            </h2>
            <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
              {calc.description}
            </p>
            <div class="mt-4 inline-flex items-center text-accent-primary dark:text-accent-primary font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              Try Calculator â†’
            </div>
          </a>
        ))
      }
    </div>

    <div class="mt-12 bg-surface-light dark:bg-surface-dark-hover rounded-xl p-8 border border-gray-200/10 dark:border-gray-800/10">
      <h2 class="font-display text-2xl font-bold mb-4 bg-gradient-to-r from-accent-primary to-accent-secondary bg-clip-text text-transparent">
        Why Use Our Calculators?
      </h2>
      <ul class="space-y-4 text-content-light-dimmed dark:text-content-dark-dimmed">
        {
          [
            "Accurate conversions and calculations for academic needs",
            "Easy to use interface with instant results",
            "Support for multiple systems and formats",
            "Complete set of matrix operations with RREF",
            "Free to use with no registration required",
          ].map((feature) => (
            <li class="flex items-start">
              <Check
                client:load
                className="w-5 h-5 text-accent-success mr-2 mt-0.5 flex-shrink-0"
              />
              {feature}
            </li>
          ))
        }
      </ul>
    </div>
  </GpaLayout>
</Layout>