---
import Layout from "../../../layouts/Layout.astro";
import GpaLayout from "../../../components/GpaLayout";
import FractionCalculator from "../../../components/FractionCalculator";

const commonConversions = [
  { decimal: "0.5", fraction: "1/2", english: "one half" },
  { decimal: "0.25", fraction: "1/4", english: "one quarter" },
  { decimal: "0.75", fraction: "3/4", english: "three quarters" },
  { decimal: "0.333", fraction: "1/3", english: "one third" },
  { decimal: "0.667", fraction: "2/3", english: "two thirds" },
];

const title = "Fraction Calculator | Convert Between Decimals and Fractions";
const description =
  "Free online calculator to convert decimals to fractions and fractions to decimals. Get simplified fractions, step-by-step explanations, and common conversions.";
const keywords =
  "fraction calculator, decimal to fraction, fraction to decimal, decimal fraction converter, fraction conversion calculator";
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-4">
      {/* Quick Links Section */}
      <div class="grid md:grid-cols-2 gap-6">
        <a
          href="/calculators/fractions/decimal-to-fraction"
          class="group bg-surface-light-hover dark:bg-surface-dark rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10 hover:shadow-lg transition-all"
        >
          <h2
            class="text-2xl font-display font-bold mb-3 group-hover:text-accent-primary transition-colors"
          >
            Decimal to Fraction
          </h2>
          <p
            class="text-content-light-dimmed dark:text-content-dark-dimmed mb-4"
          >
            Convert decimal numbers to simplified fractions. Get step-by-step
            explanations and common conversions.
          </p>
          <div
            class="text-accent-primary group-hover:translate-x-2 transition-transform"
          >
            Try Calculator →
          </div>
        </a>

        <a
          href="/calculators/fractions/fraction-to-decimal"
          class="group bg-surface-light-hover dark:bg-surface-dark rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10 hover:shadow-lg transition-all"
        >
          <h2
            class="text-2xl font-display font-bold mb-3 group-hover:text-accent-primary transition-colors"
          >
            Fraction to Decimal
          </h2>
          <p
            class="text-content-light-dimmed dark:text-content-dark-dimmed mb-4"
          >
            Convert fractions to decimal numbers. Handle mixed numbers and get
            percentage equivalents.
          </p>
          <div
            class="text-accent-primary group-hover:translate-x-2 transition-transform"
          >
            Try Calculator →
          </div>
        </a>
      </div>

      {/* Decimal to Fraction Calculator */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div class="p-2 border-b border-gray-200/10 dark:border-gray-800/10">
          <h2 class="text-2xl font-display font-bold">
            Decimal to Fraction Converter
          </h2>
        </div>
        <div class="p-2">
          <FractionCalculator client:load mode="decimal-to-fraction" />
        </div>
      </div>

      {/* Fraction to Decimal Calculator */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div class="p-2 border-b border-gray-200/10 dark:border-gray-800/10">
          <h2 class="text-2xl font-display font-bold">
            Fraction to Decimal Converter
          </h2>
        </div>
        <div class="p-2">
          <FractionCalculator client:load mode="fraction-to-decimal" />
        </div>
      </div>

      {/* Common Conversions */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">Common Conversions</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {
            commonConversions.map(({ decimal, fraction, english }) => (
              <div class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg">
                <div class="flex justify-between items-center mb-2">
                  <a
                    href={`/calculators/fractions/decimal-to-fraction/${decimal}`}
                    class="text-lg font-semibold hover:text-accent-primary transition-colors"
                  >
                    {decimal}
                  </a>
                  <span class="text-content-light-dimmed dark:text-content-dark-dimmed">
                    =
                  </span>
                  <a
                    href={`/calculators/fractions/fraction-to-decimal/${fraction.split("/")[0]}/${fraction.split("/")[1]}`}
                    class="text-lg font-semibold hover:text-accent-primary transition-colors"
                  >
                    {fraction}
                  </a>
                </div>
                <div class="text-content-light-dimmed dark:text-content-dark-dimmed text-sm">
                  ({english})
                </div>
              </div>
            ))
          }
        </div>
      </div>

      {/* Features Section */}
      <div class="grid md:grid-cols-3 gap-6">
        <div
          class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
        >
          <h3 class="font-display text-xl font-bold mb-4">Quick Conversion</h3>
          <ul
            class="space-y-2 text-content-light-dimmed dark:text-content-dark-dimmed"
          >
            <li>• Instant results</li>
            <li>• Both conversion directions</li>
            <li>• Automatic simplification</li>
          </ul>
        </div>

        <div
          class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
        >
          <h3 class="font-display text-xl font-bold mb-4">Step-by-Step</h3>
          <ul
            class="space-y-2 text-content-light-dimmed dark:text-content-dark-dimmed"
          >
            <li>• Detailed explanations</li>
            <li>• Clear conversion steps</li>
            <li>• Educational content</li>
          </ul>
        </div>

        <div
          class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
        >
          <h3 class="font-display text-xl font-bold mb-4">Advanced Features</h3>
          <ul
            class="space-y-2 text-content-light-dimmed dark:text-content-dark-dimmed"
          >
            <li>• Mixed number support</li>
            <li>• Percentage conversion</li>
            <li>• Repeating decimal handling</li>
          </ul>
        </div>
      </div>
    </div>
  </GpaLayout>
</Layout>
