---
import Layout from "../../../../layouts/Layout.astro";
import GpaLayout from "../../../../components/GpaLayout";
import FractionCalculator from "../../../../components/FractionCalculator";

const commonConversions = [
  { fraction: { num: 1, den: 2 }, decimal: "0.5", english: "one half" },
  { fraction: { num: 1, den: 4 }, decimal: "0.25", english: "one quarter" },
  { fraction: { num: 3, den: 4 }, decimal: "0.75", english: "three quarters" },
  { fraction: { num: 1, den: 3 }, decimal: "0.333", english: "one third" },
  { fraction: { num: 2, den: 3 }, decimal: "0.667", english: "two thirds" },
  { fraction: { num: 1, den: 5 }, decimal: "0.2", english: "one fifth" },
  { fraction: { num: 2, den: 5 }, decimal: "0.4", english: "two fifths" },
  { fraction: { num: 3, den: 5 }, decimal: "0.6", english: "three fifths" },
  { fraction: { num: 4, den: 5 }, decimal: "0.8", english: "four fifths" },
  { fraction: { num: 1, den: 8 }, decimal: "0.125", english: "one eighth" },
  { fraction: { num: 3, den: 8 }, decimal: "0.375", english: "three eighths" },
  { fraction: { num: 5, den: 8 }, decimal: "0.625", english: "five eighths" },
  { fraction: { num: 7, den: 8 }, decimal: "0.875", english: "seven eighths" },
];

const title =
  "Fraction to Decimal Converter | Convert Fractions to Decimal Numbers";
const description =
  "Convert any fraction to a decimal number with our free online calculator. Get decimal equivalents, percentages, and step-by-step explanations for fraction to decimal conversion.";
const keywords =
  "fraction to decimal converter, convert fraction to decimal, fraction as decimal, decimal from fraction, fraction decimal calculator";
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-12">
      {/* Hero Calculator Section */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-2xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div
          class="bg-gradient-to-r from-accent-primary/10 to-accent-secondary/10 p-2 md:p-8"
        >
          <h2 class="text-3xl font-display font-bold text-center mb-6">
            Convert Fraction to Decimal
          </h2>
          <FractionCalculator client:load mode="fraction-to-decimal" />
        </div>
      </div>

      {/* Common Conversions */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Common Fraction to Decimal Conversions
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {
            commonConversions.map(({ fraction, decimal, english }) => (
              <a
                href={`/calculators/fractions/fraction-to-decimal/${fraction.num}/${fraction.den}`}
                class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
              >
                <div class="text-lg font-semibold">
                  {fraction.num}/{fraction.den} = {decimal}
                </div>
                <div class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  ({english})
                </div>
              </a>
            ))
          }
        </div>
      </div>

      {/* How It Works */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div class="p-6 border-b border-gray-200/10 dark:border-gray-800/10">
          <h2 class="text-2xl font-display font-bold">
            How to Convert Fractions to Decimals
          </h2>
        </div>
        <div class="p-6">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-display font-bold mb-4">
                Method 1: Division
              </h3>
              <ol
                class="list-decimal list-inside space-y-3 text-content-light-dimmed dark:text-content-dark-dimmed"
              >
                <li>Divide the numerator by the denominator</li>
                <li>Perform long division if needed</li>
                <li>Round to desired decimal places</li>
                <li>Check if decimal repeats</li>
              </ol>
            </div>
            <div>
              <h3 class="text-xl font-display font-bold mb-4">
                Method 2: Calculator Method
              </h3>
              <ol
                class="list-decimal list-inside space-y-3 text-content-light-dimmed dark:text-content-dark-dimmed"
              >
                <li>Enter the numerator</li>
                <li>Divide by the denominator</li>
                <li>Use the decimal button if needed</li>
                <li>Convert to percentage by multiplying by 100</li>
              </ol>
            </div>
          </div>
        </div>
      </div>

      {/* Examples */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Example Conversions
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-200/10 dark:border-gray-800/10">
                <th class="p-4 text-left">Fraction</th>
                <th class="p-4 text-left">Division Steps</th>
                <th class="p-4 text-left">Decimal</th>
                <th class="p-4 text-left">Percentage</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200/10 dark:divide-gray-800/10">
              <tr>
                <td class="p-4">1/2</td>
                <td class="p-4">1 รท 2 = 0.5</td>
                <td class="p-4">0.5</td>
                <td class="p-4">50%</td>
              </tr>
              <tr>
                <td class="p-4">1/3</td>
                <td class="p-4">1 รท 3 = 0.333...</td>
                <td class="p-4">0.333...</td>
                <td class="p-4">33.33%</td>
              </tr>
              <tr>
                <td class="p-4">3/4</td>
                <td class="p-4">3 รท 4 = 0.75</td>
                <td class="p-4">0.75</td>
                <td class="p-4">75%</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      {/* Tips and Special Cases */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Tips and Special Cases
        </h2>
        <div class="grid gap-4">
          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h3 class="font-display font-semibold text-lg mb-2">
              Terminating Decimals
            </h3>
            <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
              These fractions result in exact decimal values (e.g., 1/2 = 0.5,
              3/4 = 0.75)
            </p>
          </div>
          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h3 class="font-display font-semibold text-lg mb-2">
              Repeating Decimals
            </h3>
            <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
              Some fractions result in repeating decimals (e.g., 1/3 = 0.333...,
              2/3 = 0.666...)
            </p>
          </div>
          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h3 class="font-display font-semibold text-lg mb-2">
              Mixed Numbers
            </h3>
            <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
              Convert mixed numbers to improper fractions first (e.g., 1 1/2 =
              3/2 = 1.5)
            </p>
          </div>
        </div>
      </div>

      {/* Common Applications */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Common Applications
        </h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-display text-xl font-bold mb-4">Academic Uses</h3>
            <ul
              class="list-disc list-inside space-y-2 text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              <li>Mathematics and calculations</li>
              <li>Grade calculations</li>
              <li>Scientific measurements</li>
              <li>Statistical analysis</li>
            </ul>
          </div>
          <div>
            <h3 class="font-display text-xl font-bold mb-4">Real-World Uses</h3>
            <ul
              class="list-disc list-inside space-y-2 text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              <li>Financial calculations</li>
              <li>Construction measurements</li>
              <li>Cooking and recipes</li>
              <li>Sports statistics</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </GpaLayout>
</Layout>
