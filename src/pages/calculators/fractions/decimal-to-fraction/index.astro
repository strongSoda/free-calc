---
import Layout from "../../../../layouts/Layout.astro";
import GpaLayout from "../../../../components/GpaLayout";
import FractionCalculator from "../../../../components/FractionCalculator";

const commonConversions = [
  { decimal: "0.5", fraction: "1/2", english: "one half" },
  { decimal: "0.25", fraction: "1/4", english: "one quarter" },
  { decimal: "0.75", fraction: "3/4", english: "three quarters" },
  { decimal: "0.333", fraction: "1/3", english: "one third" },
  { decimal: "0.667", fraction: "2/3", english: "two thirds" },
  { decimal: "0.2", fraction: "1/5", english: "one fifth" },
  { decimal: "0.4", fraction: "2/5", english: "two fifths" },
  { decimal: "0.6", fraction: "3/5", english: "three fifths" },
  { decimal: "0.8", fraction: "4/5", english: "four fifths" },
];

const title =
  "Decimal to Fraction Converter | Convert Decimal Numbers to Fractions";
const description =
  "Convert any decimal number to a fraction with our free online calculator. Get simplified fractions, mixed numbers, and step-by-step explanations for decimal to fraction conversion.";
const keywords =
  "decimal to fraction converter, convert decimal to fraction, decimal as fraction, decimal number to fraction, fraction from decimal";
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-12">
      {/* Hero Calculator Section */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-2xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div
          class="bg-gradient-to-r from-accent-primary/10 to-accent-secondary/10 p-2 md:p-8"
        >
          <h2 class="text-3xl font-display font-bold text-center mb-6">
            Convert Decimal to Fraction
          </h2>
          <FractionCalculator client:load mode="decimal-to-fraction" />
        </div>
      </div>

      {/* Common Conversions */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Common Decimal to Fraction Conversions
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {
            commonConversions.map(({ decimal, fraction, english }) => (
              <a
                href={`/calculators/fractions/decimal-to-fraction/${decimal}`}
                class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
              >
                <div class="text-lg font-semibold">
                  {decimal} = {fraction}
                </div>
                <div class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  ({english})
                </div>
              </a>
            ))
          }
        </div>
      </div>

      {/* How It Works */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div class="p-6 border-b border-gray-200/10 dark:border-gray-800/10">
          <h2 class="text-2xl font-display font-bold">
            How to Convert Decimals to Fractions
          </h2>
        </div>
        <div class="p-6">
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-xl font-display font-bold mb-4">
                Method 1: Moving Decimal Point
              </h3>
              <ol
                class="list-decimal list-inside space-y-3 text-content-light-dimmed dark:text-content-dark-dimmed"
              >
                <li>
                  Multiply the decimal by a power of 10 to remove the decimal
                  point
                </li>
                <li>Use the same power of 10 as the denominator</li>
                <li>Simplify the fraction by finding the GCD</li>
                <li>Reduce the fraction to lowest terms</li>
              </ol>
            </div>
            <div>
              <h3 class="text-xl font-display font-bold mb-4">
                Method 2: Using Fractions
              </h3>
              <ol
                class="list-decimal list-inside space-y-3 text-content-light-dimmed dark:text-content-dark-dimmed"
              >
                <li>Write the decimal as a fraction over 1</li>
                <li>Multiply both top and bottom by appropriate power of 10</li>
                <li>Find the GCD of numerator and denominator</li>
                <li>Divide both numbers by the GCD</li>
              </ol>
            </div>
          </div>
        </div>
      </div>

      {/* Examples */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Example Conversions
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-200/10 dark:border-gray-800/10">
                <th class="p-4 text-left">Decimal</th>
                <th class="p-4 text-left">Steps</th>
                <th class="p-4 text-left">Final Fraction</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200/10 dark:divide-gray-800/10">
              <tr>
                <td class="p-4">0.75</td>
                <td class="p-4">0.75 × 100 = 75/100 ÷ 25 = 3/4</td>
                <td class="p-4">3/4</td>
              </tr>
              <tr>
                <td class="p-4">0.5</td>
                <td class="p-4">0.5 × 10 = 5/10 ÷ 5 = 1/2</td>
                <td class="p-4">1/2</td>
              </tr>
              <tr>
                <td class="p-4">0.125</td>
                <td class="p-4">0.125 × 1000 = 125/1000 ÷ 125 = 1/8</td>
                <td class="p-4">1/8</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      {/* Tips Section */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Tips for Converting Decimals to Fractions
        </h2>
        <div class="grid gap-4">
          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h3 class="font-display font-semibold text-lg mb-2">
              Terminating vs. Repeating Decimals
            </h3>
            <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
              Terminating decimals (like 0.5) convert to simpler fractions than
              repeating decimals (like 0.333...)
            </p>
          </div>
          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h3 class="font-display font-semibold text-lg mb-2">
              Mixed Numbers
            </h3>
            <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
              For decimals greater than 1, convert to mixed numbers for clearer
              representation
            </p>
          </div>
          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h3 class="font-display font-semibold text-lg mb-2">
              Simplification
            </h3>
            <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
              Always simplify fractions by dividing both numerator and
              denominator by their GCD
            </p>
          </div>
        </div>
      </div>
    </div>
  </GpaLayout>
</Layout>
