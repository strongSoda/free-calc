    const newValue = value + 0.25 * i;
    if (newValue > 0 && newValue < 10) {
      related.add(newValue.toFixed(2));
    }
  }

  return Array.from(related).slice(0, 4);
};

const relatedDecimals = commonDecimals.slice(0, 4);
