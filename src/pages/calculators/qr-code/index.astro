---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
  ogImage="/qr-code-generator-og.png"
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-8">
      {/* Hero Generator Section */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-2xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div
          class="bg-gradient-to-r from-accent-primary/10 to-accent-secondary/10 p-6 md:p-8"
        >
          <h2
            class="text-3xl md:text-4xl font-display font-bold text-center mb-3"
          >
            Free QR Code Generator
          </h2>
          <p
            class="text-center text-content-light-dimmed dark:text-content-dark-dimmed mb-8 max-w-2xl mx-auto"
          >
            Create professional QR codes instantly. Add your logo, choose custom
            colors, and download in multiple formats.
          </p>

          {/* Main Generator Component */}
          <QRCodeGenerator client:load />
        </div>
      </div>

      {/* QR Code Types Grid */}
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          qrTypes.map((type) => (
            <a
              href={`/calculators/qr-code/${type.type}`}
              class="group bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 hover:shadow-lg transition-all"
            >
              <div class="flex items-start gap-4">
                <div class="text-2xl">{type.icon}</div>
                <div>
                  <h2 class="font-display font-semibold text-lg mb-2 group-hover:text-accent-primary transition-colors">
                    {type.title}
                  </h2>
                  <p class="text-content-light-dimmed dark:text-content-dark-dimmed mb-3">
                    {type.description}
                  </p>
                  <div class="text-sm font-mono text-accent-primary/75">
                    {type.example}
                  </div>
                </div>
              </div>
            </a>
          ))
        }
      </div>

      {/* Usage Examples */}
      <div class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6">
        <h2 class="text-2xl font-display font-bold mb-6">Popular Use Cases</h2>
        <div class="grid md:grid-cols-3 gap-6">
          {
            usageTips.map((tip) => (
