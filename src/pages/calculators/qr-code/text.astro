---
// src/pages/calculators/qr-code/text.astro
import Layout from "../../../layouts/Layout.astro";
import GpaLayout from "../../../components/GpaLayout";
import QRCodeGenerator from "../../../components/QRCodeGenerator";

const title = "Text QR Code Generator - Create QR Codes for Messages";
const description =
  "Generate QR codes for text messages and information. Create scannable QR codes with multiple lines of text. Free online text QR code generator.";
const keywords =
  "text qr code generator, message qr code, text to qr code, qr code for text, create text qr code, generate text qr";

const examples = [
  {
    title: "Product Information",
    description: "Share detailed product specifications and features",
    text: "Product: Premium Coffee Maker\nCapacity: 12 cups\nFeatures: Programmable timer, Auto-shutoff",
  },
  {
    title: "Event Details",
    description: "Share event information easily",
    text: "Annual Tech Conference\nDate: October 15, 2024\nVenue: Convention Center\nTime: 9:00 AM - 5:00 PM",
  },
  {
    title: "Business Hours",
    description: "Display opening hours and contact information",
    text: "Opening Hours:\nMon-Fri: 9am - 6pm\nSat: 10am - 4pm\nSun: Closed",
  },
];

const bestPractices = [
  {
    title: "Keep Text Concise",
    description:
      "While QR codes can store lots of text, shorter messages are easier to scan and read",
  },
  {
    title: "Format for Readability",
    description:
      "Use line breaks and clear formatting to make the text easy to read",
  },
  {
    title: "Test Display",
    description:
      "Check how the text appears on different devices before finalizing",
  },
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
  ogImage="/qr-code-generator-og.png"
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-12">
      {/* Hero Section */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-2xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div
          class="bg-gradient-to-r from-accent-primary/10 to-accent-secondary/10 p-8"
        >
          <h2
            class="text-4xl md:text-5xl font-display font-bold text-center mb-4"
          >
            Text QR Code Generator
          </h2>
          <p
            class="text-center text-content-light-dimmed dark:text-content-dark-dimmed mb-8 max-w-2xl mx-auto"
          >
            Create QR codes for text messages, product information, or any text
            content. Support for multiple lines and formatting.
          </p>

          <QRCodeGenerator
            client:load
            defaultType="text"
            defaultValue="Best QR Code Generator Online"
          />
        </div>
      </div>

      {/* Example Use Cases */}
      <div class="grid md:grid-cols-3 gap-6">
        {
          examples.map((example) => (
            <div class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6">
              <h3 class="font-display font-semibold text-lg mb-2">
                {example.title}
              </h3>
              <p class="text-content-light-dimmed dark:text-content-dark-dimmed mb-4">
                {example.description}
              </p>
              <div class="font-mono text-sm text-accent-primary whitespace-pre-line break-all">
                {example.text}
              </div>
            </div>
          ))
        }
      </div>

      {/* Best Practices */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl overflow-hidden"
      >
        <div class="p-6 border-b border-gray-200/10 dark:border-gray-800/10">
          <h2 class="text-2xl font-display font-bold">Best Practices</h2>
        </div>
        <div class="p-6 grid md:grid-cols-3 gap-6">
          {
            bestPractices.map((practice) => (
              <div>
                <h3 class="font-display font-semibold mb-2">
                  {practice.title}
                </h3>
                <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  {practice.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>

      {/* Other QR Code Types */}
      <div class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6">
        <h2 class="text-2xl font-display font-bold mb-6">
          Other QR Code Types
        </h2>
        <div class="grid md:grid-cols-4 gap-4">
          <a
            href="/calculators/qr-code/url"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">URL QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Create QR codes for websites
            </p>
          </a>
          <a
            href="/calculators/qr-code/email"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">Email QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Generate email address QR codes
            </p>
          </a>
          <a
            href="/calculators/qr-code/phone"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">Phone QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Create phone number QR codes
            </p>
          </a>
          <a
            href="/calculators/qr-code/sms"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">SMS QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Generate SMS message QR codes
            </p>
          </a>
        </div>
      </div>
    </div>
  </GpaLayout>
</Layout>
