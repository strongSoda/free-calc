---
// src/pages/calculators/qr-code/url.astro
import Layout from "../../../layouts/Layout.astro";
import GpaLayout from "../../../components/GpaLayout";
import QRCodeGenerator from "../../../components/QRCodeGenerator";

const title = "URL QR Code Generator - Create Website QR Codes";
const description =
  "Generate QR codes for websites and landing pages. Create scannable QR codes for your URLs with custom logos and colors. Free online URL QR code generator.";
const keywords =
  "url qr code generator, website qr code, link to qr code, qr code from url, create url qr code, generate website qr";

// Example use cases
const examples = [
  {
    title: "Business Website",
    description: "Direct customers to your website easily",
    url: "https://example.com",
  },
  {
    title: "Landing Page",
    description: "Connect offline marketing to online campaigns",
    url: "https://example.com/landing",
  },
  {
    title: "Social Media",
    description: "Share your social profiles seamlessly",
    url: "https://example.com/social",
  },
];

// Best practices
const bestPractices = [
  {
    title: "Use Short URLs",
    description:
      "Shorter URLs create less complex QR codes that are easier to scan",
  },
  {
    title: "Test Before Printing",
    description:
      "Always test your QR code with multiple devices before mass printing",
  },
  {
    title: "Include Call-to-Action",
    description:
      "Add text near the QR code telling people what to expect when scanning",
  },
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
  ogImage="/qr-code-generator-og.png"
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-12">
      {/* Hero Section */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-2xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div
          class="bg-gradient-to-r from-accent-primary/10 to-accent-secondary/10 p-8"
        >
          <h2
            class="text-4xl md:text-5xl font-display font-bold text-center mb-4"
          >
            URL QR Code Generator
          </h2>
          <p
            class="text-center text-content-light-dimmed dark:text-content-dark-dimmed mb-8 max-w-2xl mx-auto"
          >
            Create scannable QR codes for your websites and landing pages.
            Customize with your brand colors and logo.
          </p>

          <QRCodeGenerator client:load defaultType="url" />
        </div>
      </div>

      {/* Example Use Cases */}
      <div class="grid md:grid-cols-3 gap-6">
        {
          examples.map((example) => (
            <div class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6">
              <h3 class="font-display font-semibold text-lg mb-2">
                {example.title}
              </h3>
              <p class="text-content-light-dimmed dark:text-content-dark-dimmed mb-4">
                {example.description}
              </p>
              <div class="font-mono text-sm text-accent-primary break-all">
                {example.url}
              </div>
            </div>
          ))
        }
      </div>

      {/* Best Practices */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl overflow-hidden"
      >
        <div class="p-6 border-b border-gray-200/10 dark:border-gray-800/10">
          <h2 class="text-2xl font-display font-bold">Best Practices</h2>
        </div>
        <div class="p-6 grid md:grid-cols-3 gap-6">
          {
            bestPractices.map((practice) => (
              <div>
                <h3 class="font-display font-semibold mb-2">
                  {practice.title}
                </h3>
                <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  {practice.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>

      {/* Other QR Code Types */}
      <div class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6">
        <h2 class="text-2xl font-display font-bold mb-6">
          Other QR Code Types
        </h2>
        <div class="grid md:grid-cols-4 gap-4">
          <a
            href="/calculators/qr-code/text"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">Text QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Create QR codes for text messages
            </p>
          </a>
          <a
            href="/calculators/qr-code/email"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">Email QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Generate email address QR codes
            </p>
          </a>
          <a
            href="/calculators/qr-code/phone"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">Phone QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Create phone number QR codes
            </p>
          </a>
          <a
            href="/calculators/qr-code/sms"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">SMS QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Generate SMS message QR codes
            </p>
          </a>
        </div>
      </div>
    </div>
  </GpaLayout>
</Layout>
