---
// src/pages/calculators/qr-code/email.astro
import Layout from "../../../layouts/Layout.astro";
import GpaLayout from "../../../components/GpaLayout";
import QRCodeGenerator from "../../../components/QRCodeGenerator";

const title = "Email QR Code Generator - Create Email Address QR Codes";
const description =
  "Generate QR codes for email addresses. Create scannable QR codes that open email clients with pre-filled recipients. Free online email QR code generator.";
const keywords =
  "email qr code generator, email address qr code, generate email qr, create email qr code, business card qr code, contact qr code";

const examples = [
  {
    title: "Business Contact",
    description:
      "Professional email for business cards and marketing materials",
    email: "contact@business.com",
    context: "Include on business cards or promotional materials",
  },
  {
    title: "Newsletter Signup",
    description: "Quick subscription to mailing lists",
    email: "newsletter@company.com",
    context: "Use at events or in print materials for easy newsletter signups",
  },
  {
    title: "Customer Support",
    description: "Direct line to support team",
    email: "support@example.com",
    context: "Add to product packaging or documentation",
  },
];

const bestPractices = [
  {
    title: "Use Professional Emails",
    description:
      "Business or professional email addresses look more trustworthy than personal ones",
  },
  {
    title: "Add Context",
    description:
      "Include text near the QR code explaining what the email is for",
  },
  {
    title: "Test Email Client",
    description:
      "Verify the QR code opens the correct email client on different devices",
  },
];

const useCases = [
  {
    title: "Business Cards",
    description:
      "Add your email QR code to business cards for easy contact saving",
  },
  {
    title: "Marketing Materials",
    description: "Include on brochures, flyers, and promotional materials",
  },
  {
    title: "Product Support",
    description: "Add to product packaging for quick access to support",
  },
  {
    title: "Event Registration",
    description: "Use for quick email list signups at events",
  },
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
  ogImage="/qr-code-generator-og.png"
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-12">
      {/* Hero Section */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-2xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div
          class="bg-gradient-to-r from-accent-primary/10 to-accent-secondary/10 p-8"
        >
          <h2
            class="text-4xl md:text-5xl font-display font-bold text-center mb-4"
          >
            Email QR Code Generator
          </h2>
          <p
            class="text-center text-content-light-dimmed dark:text-content-dark-dimmed mb-8 max-w-2xl mx-auto"
          >
            Generate QR codes that instantly open email clients with your email
            address. Perfect for business cards and marketing materials.
          </p>

          <QRCodeGenerator
            client:load
            defaultType="email"
            defaultValue="contact@example.com"
          />
        </div>
      </div>

      {/* Example Use Cases */}
      <div class="grid md:grid-cols-3 gap-6">
        {
          examples.map((example) => (
            <div class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6">
              <h3 class="font-display font-semibold text-lg mb-2">
                {example.title}
              </h3>
              <p class="text-content-light-dimmed dark:text-content-dark-dimmed mb-4">
                {example.description}
              </p>
              <div class="font-mono text-sm text-accent-primary break-all mb-2">
                {example.email}
              </div>
              <div class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed italic">
                {example.context}
              </div>
            </div>
          ))
        }
      </div>

      {/* Common Use Cases */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl overflow-hidden"
      >
        <div class="p-6 border-b border-gray-200/10 dark:border-gray-800/10">
          <h2 class="text-2xl font-display font-bold">Common Use Cases</h2>
        </div>
        <div class="p-6 grid grid-cols-2 md:grid-cols-4 gap-6">
          {
            useCases.map((useCase) => (
              <div class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg">
                <h3 class="font-display font-semibold mb-2">{useCase.title}</h3>
                <p class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed">
                  {useCase.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>

      {/* Best Practices */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl overflow-hidden"
      >
        <div class="p-6 border-b border-gray-200/10 dark:border-gray-800/10">
          <h2 class="text-2xl font-display font-bold">Best Practices</h2>
        </div>
        <div class="p-6 grid md:grid-cols-3 gap-6">
          {
            bestPractices.map((practice) => (
              <div>
                <h3 class="font-display font-semibold mb-2">
                  {practice.title}
                </h3>
                <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  {practice.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>

      {/* Other QR Code Types */}
      <div class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6">
        <h2 class="text-2xl font-display font-bold mb-6">
          Other QR Code Types
        </h2>
        <div class="grid md:grid-cols-4 gap-4">
          <a
            href="/calculators/qr-code/url"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">URL QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Create QR codes for websites
            </p>
          </a>
          <a
            href="/calculators/qr-code/text"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">Text QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Generate text message QR codes
            </p>
          </a>
          <a
            href="/calculators/qr-code/phone"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">Phone QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Create phone number QR codes
            </p>
          </a>
          <a
            href="/calculators/qr-code/sms"
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:shadow-md transition-shadow"
          >
            <h3 class="font-medium mb-2">SMS QR Code</h3>
            <p
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              Generate SMS message QR codes
            </p>
          </a>
        </div>
      </div>
    </div>
  </GpaLayout>
</Layout>
