---
// src/pages/calculators/volume/sphere/index.astro
import Layout from "../../../../layouts/Layout.astro";
import GpaLayout from "../../../../components/GpaLayout";
import SphereCalculator from "../../../../components/SphereCalculator";

const title = "Sphere Volume Calculator";
const description =
  "Calculate the volume of a sphere using radius. Free online calculator for spherical tanks, domes, and balls with instant unit conversion.";
const keywords =
  "sphere volume calculator, ball volume, spherical tank volume, dome volume calculator";

const commonExamples = [
  {
    dimensions: { radius: 3 },
    unit: "ft",
    name: "Spherical Tank",
    volume: (4 / 3) * Math.PI * Math.pow(3, 3),
  },
  {
    dimensions: { radius: 1 },
    unit: "m",
    name: "Storage Ball",
    volume: (4 / 3) * Math.PI,
  },
  {
    dimensions: { radius: 6 },
    unit: "in",
    name: "Sports Ball",
    volume: (4 / 3) * Math.PI * Math.pow(6, 3),
  },
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-12">
      {/* Calculator Section */}
      <section>
        <h2 class="text-2xl font-display font-bold mb-6">
          Sphere Volume Calculator
        </h2>
        <SphereCalculator client:load />
      </section>

      {/* Common Examples */}
      <section
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">Common Examples</h2>
        <div class="grid md:grid-cols-3 gap-6">
          {
            commonExamples.map((example) => (
              <a
                href={`/calculators/volume/sphere/${example.unit}/${example.dimensions.radius}`}
                class="bg-surface-light-hover dark:bg-surface-dark p-4 rounded-lg hover:shadow-lg transition-all"
              >
                <h3 class="font-display font-semibold mb-2">{example.name}</h3>
                <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  Radius: {example.dimensions.radius} {example.unit}
                </p>
                <p class="text-accent-primary font-semibold mt-2">
                  Volume: {example.volume.toFixed(2)} {example.unit}³
                </p>
              </a>
            ))
          }
        </div>
      </section>

      {/* SEO Content */}
      <section class="prose dark:prose-invert max-w-none">
        <h2>How to Calculate Sphere Volume</h2>
        <p>
          A sphere is a perfectly round three-dimensional object. Its volume is
          calculated using its radius and the formula: V = (4/3) × π × r³
        </p>

        <div
          class="bg-surface-light-hover dark:bg-surface-dark p-4 rounded-lg my-4"
        >
          <p class="font-mono">Volume = (4/3) × π × radius³</p>
        </div>

        <h3>Common Applications</h3>
        <ul>
          <li>Spherical storage tanks and containers</li>
          <li>Sports balls and equipment</li>
          <li>Domes and architectural structures</li>
          <li>Planetary and astronomical calculations</li>
          <li>Industrial spherical vessels</li>
        </ul>

        <h3>Tips for Accurate Measurement</h3>
        <ul>
          <li>Measure the diameter and divide by 2 for radius</li>
          <li>Take multiple measurements if the sphere isn't perfect</li>
          <li>Use consistent units throughout calculation</li>
          <li>Consider using circumference divided by 2π for radius</li>
        </ul>
      </section>
    </div>
  </GpaLayout>
</Layout>
