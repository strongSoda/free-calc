---
// src/pages/calculators/volume/cylinder/index.astro
import Layout from "../../../../layouts/Layout.astro";
import GpaLayout from "../../../../components/GpaLayout";
import CylinderCalculator from "../../../../components/CylinderCalculator";

const title = "Cylinder Volume Calculator";
const description =
  "Calculate the volume of a cylinder using radius and height. Free online calculator for tanks, pipes, and containers with instant unit conversion.";
const keywords =
  "cylinder volume calculator, circular tank volume, pipe volume calculator, cylindrical container volume";

const commonExamples = [
  {
    dimensions: { radius: 1, height: 2 },
    unit: "m",
    name: "Water Tank",
    volume: Math.PI * 4 * 5,
  },
  {
    dimensions: { radius: 3, height: 6 },
    unit: "ft",
    name: "Storage Tank",
    volume: Math.PI * 9 * 6,
  },
  {
    dimensions: { radius: 0.5, height: 10 },
    unit: "ft",
    name: "Pipe Section",
    volume: Math.PI * 0.25 * 10,
  },
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
>
  <GpaLayout client:load {title} {description} {keywords}>
    <div class="space-y-12">
      {/* Calculator Section */}
      <section>
        <h2 class="text-2xl font-display font-bold mb-6">
          Cylinder Volume Calculator
        </h2>
        <CylinderCalculator client:load />
      </section>

      {/* Common Examples */}
      <section
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">Common Examples</h2>
        <div class="grid md:grid-cols-3 gap-6">
          {
            commonExamples.map((example) => (
              <a
                href={`/calculators/volume/cylinder/${example.unit}/${example.dimensions.radius}-${example.dimensions.height}`}
                class="bg-surface-light-hover dark:bg-surface-dark p-4 rounded-lg hover:shadow-lg transition-all"
              >
                <h3 class="font-display font-semibold mb-2">{example.name}</h3>
                <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  Radius: {example.dimensions.radius} {example.unit}
                  <br />
                  Height: {example.dimensions.height} {example.unit}
                </p>
                <p class="text-accent-primary font-semibold mt-2">
                  Volume: {example.volume.toFixed(2)} {example.unit}³
                </p>
              </a>
            ))
          }
        </div>
      </section>

      {/* SEO Content */}
      <section class="prose dark:prose-invert max-w-none">
        <h2>How to Calculate Cylinder Volume</h2>
        <p>
          A cylinder is a three-dimensional solid with two parallel circular
          bases. Its volume is calculated by multiplying the area of the base
          (πr²) by the height (h):
        </p>

        <div
          class="bg-surface-light-hover dark:bg-surface-dark p-4 rounded-lg my-4"
        >
          <p class="font-mono">Volume = π × radius² × height</p>
        </div>

        <h3>Common Applications</h3>
        <ul>
          <li>Water tanks and storage containers</li>
          <li>Industrial pipes and cylinders</li>
          <li>Fuel tanks and gas containers</li>
          <li>Civil engineering projects</li>
          <li>Manufacturing and construction</li>
        </ul>

        <h3>Tips for Accurate Measurement</h3>
        <ul>
          <li>Measure the radius from the center to the edge</li>
          <li>Ensure the height is perpendicular to the base</li>
          <li>Use consistent units for both measurements</li>
          <li>
            For irregular cylinders, take multiple measurements and average them
          </li>
        </ul>
      </section>
    </div>
  </GpaLayout>
</Layout>
