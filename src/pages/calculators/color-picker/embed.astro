---
// src/pages/calculators/color-picker/embed.astro
import Layout from "../../../layouts/Layout.astro";
import GpaLayout from "../../../components/GpaLayout";
import CopyCodeBlock from "../../../components/CopyCodeBlock";

const title = "Embed Color Picker - Free Widget";
const description =
  "Embed our free color picker on your website. Get color codes in HEX, RGB, HSL formats, generate color schemes, and check color contrasts.";
const keywords =
  "embed color picker, color picker widget, hex color picker embed, free color picker";

const embedCode = `<!-- Color Picker -->
<div id="color-picker"></div>
<script src="https://rref-calculator.com/scripts/calculator-embed.js"></script>
<script>
  createCalculator('color-picker', 'color-picker');
</script>`;

const features = [
  {
    title: "Multiple Color Formats",
    description:
      "Get color codes in HEX, RGB, HSL, and RGBA formats with easy copy functionality.",
  },
  {
    title: "Color Harmonies",
    description:
      "Generate complementary, analogous, and other color harmonies for your designs.",
  },
  {
    title: "Contrast Checker",
    description:
      "Check color contrast for accessibility compliance with WCAG guidelines.",
  },
  {
    title: "Color Variations",
    description: "Generate tints, shades, and color variations automatically.",
  },
  {
    title: "URL Sharing",
    description: "Share colors via URL with automatic state preservation.",
  },
  {
    title: "Dark Mode Support",
    description:
      "Automatic dark mode detection and switching to match your website's theme.",
  },
];

const useCases = [
  {
    title: "Design Websites",
    description: "Help designers pick and manage colors for their projects.",
  },
  {
    title: "Developer Tools",
    description: "Add color picking capabilities to development environments.",
  },
  {
    title: "Educational Sites",
    description: "Teach color theory with practical examples and tools.",
  },
  {
    title: "Art & Creative Tools",
    description:
      "Provide color selection tools for digital artists and creators.",
  },
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  ogImage="/color-picker-og.png"
>
  <GpaLayout {title} {description} {keywords} client:load>
    <div class="space-y-12">
      {/* Hero Section */}
      <div class="text-center">
        <h1 class="text-4xl font-display font-bold mb-4">
          Embed Our Color Picker
        </h1>
        <p
          class="text-xl text-content-light-dimmed dark:text-content-dark-dimmed"
        >
          Add a professional color picker to your website in minutes.
        </p>
      </div>

      {/* Embed Instructions */}
      <div
        class="bg-surface-light-hover dark:bg-surface-dark rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-4">How to Embed</h2>
        <p class="mb-4">
          Copy and paste this code into your HTML where you want the color
          picker to appear:
        </p>
        <CopyCodeBlock code={embedCode} client:load />
      </div>

      {/* Preview */}
      <div
        class="bg-surface-light-hover dark:bg-surface-dark rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-4">Preview</h2>
        <div
          class="w-full aspect-[4/3] bg-surface-light dark:bg-surface-dark rounded-lg overflow-hidden"
        >
          <iframe
            src="/calculators/color-picker/widget"
            width="100%"
            height="600px"
            style="border: none;"
            title="Color Picker Preview"></iframe>
        </div>
      </div>

      {/* Features */}
      <div class="space-y-8">
        <h2 class="text-2xl font-display font-bold">Features</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {
            features.map((feature) => (
              <div class="bg-surface-light-hover dark:bg-surface-dark p-6 rounded-xl">
                <h3 class="text-xl font-display font-bold mb-2">
                  {feature.title}
                </h3>
                <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  {feature.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>

      {/* Use Cases */}
      <div class="space-y-8">
        <h2 class="text-2xl font-display font-bold">Use Cases</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {
            useCases.map((useCase) => (
              <div class="bg-surface-light-hover dark:bg-surface-dark p-6 rounded-xl">
                <h3 class="text-xl font-display font-bold mb-2">
                  {useCase.title}
                </h3>
                <p class="text-content-light-dimmed dark:text-content-dark-dimmed">
                  {useCase.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>

      {/* Terms of Use */}
      <div
        class="bg-surface-light-hover dark:bg-surface-dark rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-4">Terms of Use</h2>
        <ul
          class="list-disc list-inside space-y-2 text-content-light-dimmed dark:text-content-dark-dimmed"
        >
          <li>The color picker is free to embed on any website</li>
          <li>Attribution links must remain visible and unmodified</li>
          <li>The color picker may not be modified or reverse engineered</li>
          <li>
            We reserve the right to update or modify the color picker at any
            time
          </li>
        </ul>
      </div>
    </div>
  </GpaLayout>
</Layout>
