---
import Layout from "../../../layouts/Layout.astro";
import GpaLayout from "../../../components/GpaLayout";
import BinaryTranslator from "../../../components/BinaryTranslator";

const title = "Hex to Octal Converter | Convert Hexadecimal to Octal Numbers";
const description =
  "Free online hexadecimal to octal converter. Convert hex to octal numbers instantly with step-by-step explanations. Includes conversion tables and examples.";
const keywords =
  "hex to octal, hexadecimal to octal, hex octal converter, convert hex to octal, hex conversion calculator, hexadecimal octal conversion";

// Related conversions for navigation
const relatedConversions = [
  {
    title: "Hex to Binary",
    url: "/calculators/binary-translator/hex-to-binary",
  },
  {
    title: "Hex to Decimal",
    url: "/calculators/binary-translator/hex-to-decimal",
  },
  { title: "Octal to Hex", url: "/calculators/binary-translator/octal-to-hex" },
  {
    title: "Binary to Hex",
    url: "/calculators/binary-translator/binary-to-hex",
  },
];

// Common examples with explanations
const examples = [
  {
    hex: "FF",
    octal: "377",
    binary: "11111111",
    description: "Maximum 8-bit value",
  },
  {
    hex: "A5",
    octal: "245",
    binary: "10100101",
    description: "Common checkered pattern",
  },
  {
    hex: "100",
    octal: "400",
    binary: "001000000",
    description: "Power of 16",
  },
  {
    hex: "1F",
    octal: "37",
    binary: "00011111",
    description: "5-bit maximum",
  },
];

// Conversion reference table
const conversionTable = [
  { hex: "0", octal: "000", binary: "0000" },
  { hex: "1", octal: "001", binary: "0001" },
  { hex: "2", octal: "002", binary: "0010" },
  { hex: "3", octal: "003", binary: "0011" },
  { hex: "4", octal: "004", binary: "0100" },
  { hex: "5", octal: "005", binary: "0101" },
  { hex: "6", octal: "006", binary: "0110" },
  { hex: "7", octal: "007", binary: "0111" },
  { hex: "8", octal: "010", binary: "1000" },
  { hex: "9", octal: "011", binary: "1001" },
  { hex: "A", octal: "012", binary: "1010" },
  { hex: "B", octal: "013", binary: "1011" },
  { hex: "C", octal: "014", binary: "1100" },
  { hex: "D", octal: "015", binary: "1101" },
  { hex: "E", octal: "016", binary: "1110" },
  { hex: "F", octal: "017", binary: "1111" },
];
---

<Layout
  title={title}
  description={description}
  keywords={keywords}
  currentUrl={Astro.url.pathname}
  ogImage="/binary-translator.png"
>
  <GpaLayout {title} {description} {keywords} client:load>
    <div class="space-y-12">
      {/* Main Converter */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-2xl border border-gray-200/10 dark:border-gray-800/10 overflow-hidden"
      >
        <div
          class="bg-gradient-to-r from-accent-primary/10 to-accent-secondary/10 p-2 md:p-8"
        >
          <h2 class="text-3xl font-display font-bold text-center mb-6">
            Hexadecimal to Octal Converter
          </h2>
          <BinaryTranslator client:load defaultFrom="hex" defaultTo="octal" />
        </div>
      </div>

      {/* Examples */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">Common Examples</h2>
        <div class="grid gap-4 md:grid-cols-2">
          {
            examples.map((ex) => (
              <div class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg">
                <div class="font-mono text-lg mb-2">Hex: {ex.hex}</div>
                <div class="font-mono mb-2">Octal: {ex.octal}</div>
                <div class="font-mono text-sm mb-2">Binary: {ex.binary}</div>
                <div class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed">
                  {ex.description}
                </div>
              </div>
            ))
          }
        </div>
      </div>

      {/* Conversion Table */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Conversion Reference Table
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-200/10 dark:border-gray-800/10">
                <th class="p-2 text-left">Hex</th>
                <th class="p-2 text-left">Octal</th>
                <th class="p-2 text-left">Binary</th>
              </tr>
            </thead>
            <tbody>
              {
                conversionTable.map((entry) => (
                  <tr class="border-b border-gray-200/10 dark:border-gray-800/10">
                    <td class="p-2 font-mono">{entry.hex}</td>
                    <td class="p-2 font-mono">{entry.octal}</td>
                    <td class="p-2 font-mono">{entry.binary}</td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>

      {/* How It Works */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          How Hex to Octal Conversion Works
        </h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-xl font-semibold mb-3">Two-Step Process</h3>
            <ol
              class="list-decimal list-inside space-y-2 text-content-light-dimmed dark:text-content-dark-dimmed"
            >
              <li>Convert hex to binary (each hex digit becomes 4 bits)</li>
              <li>
                Group binary digits into sets of three and convert to octal
              </li>
            </ol>
          </div>

          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h4 class="font-medium mb-2">Example: Converting "A5" to Octal</h4>
            <ol class="list-none space-y-1 text-sm">
              <li>1. Hex to binary:</li>
              <li class="ml-4">• A = 1010</li>
              <li class="ml-4">• 5 = 0101</li>
              <li class="ml-4">• Combined: 10100101</li>
              <li>2. Group into threes: 010 100 101</li>
              <li>3. Convert each group to octal: 2 4 5</li>
              <li>4. Final octal: 245</li>
            </ol>
          </div>
        </div>
      </div>

      {/* Conversion Tips */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">Conversion Tips</h2>
        <div class="grid gap-4 md:grid-cols-2">
          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h3 class="font-medium mb-2">Quick Tips</h3>
            <ul
              class="list-disc list-inside text-sm text-content-light-dimmed dark:text-content-dark-dimmed space-y-1"
            >
              <li>Memorize hex to binary conversions</li>
              <li>Practice grouping binary in threes</li>
              <li>Remember octal uses only 0-7</li>
              <li>Add leading zeros when needed</li>
            </ul>
          </div>
          <div
            class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg"
          >
            <h3 class="font-medium mb-2">Common Patterns</h3>
            <div
              class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed space-y-1"
            >
              <p>F → 017 (maximum 4-bit value)</p>
              <p>8 → 010 (single octal digit)</p>
              <p>10 → 020 (hex 16)</p>
              <p>FF → 377 (maximum 8-bit value)</p>
            </div>
          </div>
        </div>
      </div>

      {/* Practice Section */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">Practice Problems</h2>
        <div class="grid gap-4 md:grid-cols-3">
          {
            [
              { hex: "3F", octal: "077" },
              { hex: "80", octal: "200" },
              { hex: "FF", octal: "377" },
            ].map((problem) => (
              <div class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg">
                <p class="font-mono mb-2">Convert: {problem.hex}₁₆</p>
                <p class="text-sm text-content-light-dimmed dark:text-content-dark-dimmed opacity-0 hover:opacity-100 transition-opacity">
                  Answer: {problem.octal}₈
                </p>
              </div>
            ))
          }
        </div>
      </div>

      {/* Related Conversions */}
      <div
        class="bg-surface-light dark:bg-surface-dark-hover rounded-xl p-6 border border-gray-200/10 dark:border-gray-800/10"
      >
        <h2 class="text-2xl font-display font-bold mb-6">
          Related Conversions
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {
            relatedConversions.map((conv) => (
              <a
                href={conv.url}
                class="p-4 bg-surface-light-hover dark:bg-surface-dark rounded-lg hover:border-accent-primary/20 transition-colors border border-gray-200/10 dark:border-gray-800/10 group"
              >
                <div class="font-medium group-hover:text-accent-primary transition-colors">
                  {conv.title}
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </GpaLayout>
</Layout>
